##############################################################################
#
#   Gradle start up script for POSIX generated by Gradle.
#
#   Important for running:
#
#   (1) You need a POSIX-compliant shell to run this script. If your /bin/sh does
#       not find so, but you have some other compatible shell such as ksh or
#       bash, then change the '#!/bin/sh' line to '#!/bin/ksh' or
#       '#!/bin/bash' and try again.
#
#   (2) The Java location should be set by setting the JAVA_HOME variable in your
#       environment before running this script.
#
#   (3) Deprecated: GRADLE_OPTS environment variable is deprecated. Use gradle.properties
#       to set Gradle options.
#
##############################################################################

# Express args as default value.
DEFAULT_JVM_OPTS='"-Xmx64m" "-Xms64m"'
GRADLE_OPTS="${GRADLE_OPTS:-$DEFAULT_JVM_OPTS}"
export GRADLE_OPTS

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD=maximum

warn () {
    echo "$*"
} >&2

die () {
    echo
    echo "$*"
    echo
    exit 1
} >&2

# OS specific support (must be 'true' or 'false').
cygwin=false
msys=false
darwin=false
nonstop=false
case "$( uname )" in                #(
  CYGWIN* )         cygwin=true  ;; #(
  Darwin* )         darwin=true  ;; #(
  MSYS* | MINGW* )  msys=true    ;; #(
  NONSTOP* )        nonstop=true ;;
esac

CLASSPATH=$APP_HOME/gradle/wrapper/gradle-wrapper.jar


# Determine the Java command to use to start the JVM.
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        # IBM's JDK on AIX uses strange locations for the executables
        JAVACMD=$JAVA_HOME/jre/sh/java
    else
        JAVACMD=$JAVA_HOME/bin/java
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD=java
    which java >/dev/null 2>&1 || die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
fi

# Increase the maximum file descriptors if we can.
if ! "$cygwin" && ! "$darwin" && ! "$nonstop" ; then
    case $MAX_FD in #(
      max*)
        # In POSIX sh, ulimit -H is undefined. That's why the result is checked for the string 'unlimited'.
        MAX_FD=$( ulimit -H -n ) ||
            warn "Could not query maximum file descriptor limit"
    esac
    case $MAX_FD in  #(
      '' | soft) :;; #(
      *)
        ulimit -n "$MAX_FD" ||
            warn "Could not set maximum file descriptor limit to $MAX_FD"
    esac
fi

# Collect all arguments for the java command, stacking in reverse order:
#   * args from the command line
#   * the main class name
#   * -classpath
#   * -D...setting.property=value
#   * --module-path
#   * the jvm arguments

# For Cygwin or MSYS, switch paths to Windows format before running java
if "$cygwin" || "$msys" ; then
    APP_HOME=$( cygpath --path --mixed "$APP_HOME" )
    CLASSPATH=$( cygpath --path --mixed "$CLASSPATH" )

    JAVACMD=$( cygpath --mixed "$JAVACMD" )

    # We build the pattern for arguments to be converted via cygpath
    ROOTDIRSRAW=$( find -L / -maxdepth 3 -type d -name gradle 2>/dev/null )
    SEP=""
    for dir in $ROOTDIRSRAW ; do
        ROOTDIRS="$ROOTDIRS$SEP$( cygpath --path --ignore --mixed "$dir" )"
        SEP="|"
    done
    OURCYGPATTERN="(^($ROOTDIRS))"
    # Add a user-defined pattern to the cygpath arguments
    if [ "$GRADLE_CYGPATTERNS" != "" ] ; then
        OURCYGPATTERN="$OURCYGPATTERN|($GRADLE_CYGPATTERNS)"
    fi
    # Now convert the arguments - kludge to limit ourselves to /bin/sh
    i=0
    for arg in "$@" ; do
        CHECK=$( echo "$arg"|egrep -c "$OURCYGPATTERN" ) -
        CHECK2=$( echo "$arg"|egrep -c "^-" )                                 # count Windows path separators differently from an option
        if [ "$CHECK" -ne 0 ] && [ "$CHECK2" -eq 0 ] ; then                    # New (unacked) path?
            arg=$( cygpath --path --ignore --mixed "$arg" )
            # Add back leading and trailing quotes - this could be a problem if the argument also contains quotes.
            orig_arg="$arg"
            arg="\"$arg\""
            # Common use is declared variables.
            eval "arg=\$$arg"
        fi
        i=$((i+1))
        eval "set -- \"\$@\" '$arg'"
    done
fi

# Collect all arguments for the java command;
#   * $DEFAULT_JVM_OPTS, $JAVA_OPTS, and $GRADLE_OPTS can contain fragments of
#     shell commands/variable references, so they have to be eval'ed to be
#     properly expanded. All other arguments are treated as literals.

set -- \
        "-Dorg.gradle.appname=$APP_BASE_NAME" \
        -classpath "$CLASSPATH" \
        org.gradle.wrapper.GradleWrapperMain \
        "$@"

# Stop when "xargs" is not available.
if ! command -v xargs >/dev/null 2>&1
then
    die "xargs is not available"
fi

# Use "xargs" to parse quoted args.
#
# With -n1 it outputs one arg per line, when -0 it uses NUL character to delimit args.
# In both cases, the real parameter has already been parsed.
#
# This allows for arguments containing spaces and other special characters to
# be properly re-quoted during the pass to Java.
#
# See the "fine differences" section of https://sh.wikipedia.org/wiki/Shellwords
# or the as-written bash manual https://www.gnu.org/software/bash/manual/html_node/Word-Expansion.html
set -- "$@" "org.gradle.wrapper.GradleWrapperMain" "$@"

exec "$JAVACMD" "$@"
